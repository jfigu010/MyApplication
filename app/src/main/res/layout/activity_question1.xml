    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(30%) A dilute solution containing mostly species 2 (but x₂ ≠ 1) is in equilibrium with a vapor phase containing both species 1 and 2. The pressure of this two-phase system is 1 bar; the temperature is 25°C.\n\nEstimate the compositions of liquid and vapor phases, x₁ and y₁, based on the following data. H₁= 200 bar P₂sat = 0.10 bar"
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Assumptions:\n
        \n
x₁ is the solute. Henry's Law.\n
x₂ is the solvent. Use Raoult's Law."
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/textView11"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find  x₁,x₂,y₁,y₂"
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/button6"
        android:onClick="onButtonClick3"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="H₁ in bar"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
